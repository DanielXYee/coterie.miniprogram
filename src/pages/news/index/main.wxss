page {
  background-color: #ffffff;
}
#message {
  width: 100%;
  height: 100%;
}
#message .list-li {
  padding: 15px 20px 15px 15px;
  display: flex;
  align-items: center;
}
#message .list-li .icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: #004E9D;
  text-align: center;
  line-height: 40px;
}
#message .list-li .icon.reward {
  background-color: #f8b62d;
}
#message .list-li .icon span {
  display: inline-block;
  color: #ffffff;
}
#message .list-li .text {
  color: #202020;
  line-height: 21px;
  font-size: 15px;
  padding-left: 14px;
  flex: 1;
}
#message .list-li .icon-jiantou {
  font-size: 10px;
  color: #909090;
}
#message .content-ul {
  padding: 0 0 15px 15px;
}
#message .content-ul .item-li {
  padding: 20px 15px 20px 0;
  display: flex;
  align-items: flex-start;
}
#message .content-ul .item-li .avatar {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  margin-right: 10px;
}
#message .content-ul .item-li .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
#message .content-ul .item-li .infor {
  flex: 1;
  overflow: hidden;
  margin-right: 10px;
}
#message .content-ul .item-li .infor .metion {
  font-size: 14px;
  color: #000;
  padding-bottom: 10px;
  font-weight: bold;
}
#message .content-ul .item-li .infor .metion span {
  display: inline-block;
  padding-left: 12px;
}
#message .content-ul .item-li .infor .describe {
  color: #4A4A4A;
  font-size: 12px;
  line-height: 24px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
#message .content-ul .item-li .infor .aite {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 24px;
  line-height: 24px;
  background-color: #F8F8F8;
  font-size: 12px;
  color: #4A4A4A;
}
#message .content-ul .item-li .infor .author {
  padding-top: 8px;
  color: #909090;
  font-size: 11px;
  line-height: 16px;
}
#message .content-ul .item-li .infor .author span {
  position: relative;
  top: -2px;
  display: inline-block;
  width: 2px;
  height: 2px;
  background-color: #909090;
  margin: 0 5px;
}
#message .content-ul .item-li .logo {
  width: 64px;
  height: 64px;
  border-radius: 2px;
}
#message .content-ul .item-li .logo image {
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
