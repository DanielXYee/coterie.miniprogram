#replyQuestion .knowladge-item .theme-item .avatar-box {
  background: #ffffff;
  display: flex;
  align-content: center;
  padding: 15px;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .img {
  width: 36px;
  height: 36px;
  border-radius: 100%;
  overflow: hidden;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .img image {
  width: 100%;
  height: 100%;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .info {
  overflow: hidden;
  flex: 1;
  margin-left: 15px;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .info .name {
  font-weight: bold;
  font-size: 14px;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .info .time {
  font-size: 11px;
  color: #909090;
}
#replyQuestion .knowladge-item .theme-item .avatar-box .option {
  color: #4A4A4A;
  font-size: 25px;
}
#replyQuestion .knowladge-item .theme-item .content-box {
  background: #ffffff;
  padding: 15px;
}
#replyQuestion .knowladge-item .theme-item .content-box .question-text {
  color: #909090;
  font-size: 14px;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list {
  display: flex;
  flex-wrap: wrap;
  padding: 10px 0 0 0;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list ::after {
  content: "";
  display: block;
  clear: both;
  height: 0;
  overflow: hidden;
  visibility: hidden;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .img {
  width: 100%;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .img image {
  width: 100%;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .list__li {
  width: 33.33%;
  padding: 1%;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .list__li .more {
  margin: 0 -1%;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .list__li view {
  position: relative;
  width: 100%;
  height: 0;
  overflow: hidden;
  margin: 0;
  padding-bottom: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
#replyQuestion .knowladge-item .theme-item .content-box .img .item__list .list__li view span {
  display: block;
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
}
#replyQuestion .knowladge-item .theme-item .content-box .text {
  color: #202020;
  line-height: 24px;
  margin-top: 10px;
}
#replyQuestion .knowladge-item .theme-item .content-box .word {
  display: flex;
  align-items: center;
  height: 40px;
  line-height: 40px;
  background: #F8F8F8;
  border-radius: 2px;
  margin-top: 10px;
}
#replyQuestion .knowladge-item .theme-item .content-box .word .ico-img {
  width: 40px;
  height: 40px;
  border-radius: 2px;
  background: #FB5054;
}
#replyQuestion .knowladge-item .theme-item .content-box .word .text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 15px;
  flex: 1;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F3F3F3;
  padding: 10px;
  position: relative;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link .link-left {
  flex: 1;
  overflow: hidden;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link .link-left .title {
  color: #4A4A4A;
  font-size: 12px;
  line-height: 17px;
  padding-bottom: 16px;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link .link-left .txt {
  color: #909090;
  font-size: 12px;
  line-height: 17px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link .link-right {
  width: 50px;
  height: 50px;
  background-color: #004E9D;
  line-height: 50px;
  text-align: center;
}
#replyQuestion .knowladge-item .theme-item .content-box .url .edit-link .link-right span {
  display: inline-block;
  color: #ffffff;
  font-size: 19px;
}
#replyQuestion .knowladge-item .theme-item .content-box .reply-box .ask {
  background: #F8F8F8;
  border-radius: 2px;
  color: #4A4A4A;
  margin-bottom: 10px;
}
#replyQuestion .knowladge-item .theme-item .content-box .reply-box .ask .text {
  padding: 5px 10px;
}
#replyQuestion .knowladge-item .theme-item .content-box .tag-box {
  margin-top: 20px;
  color: #004E9D;
}
#replyQuestion .knowladge-item .theme-item .content-box .tag-box span {
  margin-right: 10px;
}
#replyQuestion .knowladge-item .theme-item .reply-box {
  padding: 15px;
  text-align: right;
}
#replyQuestion .knowladge-item .theme-item .reply-box textarea {
  text-align: left;
  box-sizing: border-box;
  padding: 10px;
  width: 100%;
  height: 100px;
  border: 1px solid #DBDBDB;
  border-radius: 4px;
}
#replyQuestion .knowladge-item .theme-item .reply-box .submit {
  padding: 5px 20px;
  background: #004E9D;
  color: #FFFFFF;
  display: inline-block;
  border-radius: 4px;
  margin-top: 10px;
}
