    <view wx:for="{{contentList}}" wx:for-item="items" wx:for-index="idx" wx:key="{{idx}}">
        <view class="block knowladge-item" wx:for="{{items}}" wx:key="{{index}}">
            <view class="theme-item">
                <view class="avatar-box">
                    <view class="img">
                        <image src="{{item.user.avatar}}"></image>
                    </view>
                    <view class="info">
                        <view class="name nowrap">
                            {{item.user.nick_name}}
                        </view>
                        <view class="time">
                            创建于 {{item.created_at}}
                        </view>
                    </view>
                    <view class="option iconfont icon-gengduo1">

                    </view>
                </view>
                <view class="text">
                    {{item.description}}
                </view>
                <view class="img" wx:if="{{item.content_type == 'default' && item.img_list_info.length != 1}}">
                    <view class="item__list more">
                        <view class="list__li" bindtap="preImage" wx:for="{{item.img_list_info}}" wx:for-item="url" wx:for-index="key" wx:key="{{key}}">
                            <view style="background: url({{url}}); background-position: center;background-repeat: no-repeat;background-size: cover;">
                                <span></span>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="img" bindtap="preImage"  wx:if="{{item.content_type == 'default' && item.img_list_info.length == 1}}" >
                    <image mode="widthFix" bindload="imgLoad"  src="{{url}}" wx:for="{{item.img_list_info}}" wx:for-item="url" wx:for-index="key" wx:key="{{key}}"></image>
                </view>
                <view class="url" wx:if="{{item.content_type == 'link'}}">
                    <view class="edit-link">
                        <view class="link-left">
                            <view class="title">{{item.link_info.title}}</view>
                            <view class="txt">{{item.link_info.link}}</view>
                        </view>
                        <view class="link-right">
                            <span class="iconfont icon-lianjie"></span>
                        </view>
                    </view>
                </view>
                <view class="tag-box" wx:if="{{item.tags_list_info}}">
                    <span wx:for="{{item.tags_list_info}}" wx:for-item="tag" wx:for-index="tkey" wx:key="{{tkey}}"># {{tag}} # </span>
                </view>
                <!--操作-->
                <view class="operating-box">
                    <view class="item active">
                        <i class="iconfont icon-dianzan"></i>
                        <view>{{item.praise_count}}</view>
                    </view>
                    <view class="item">
                        <i class="iconfont icon-pinglun"></i>
                        <view>{{item.comment_count}}</view>
                    </view>
                   <!-- <view class="item">
                        <i class="iconfont icon-dashang1"></i>
                        <view>打赏</view>
                    </view>-->
                    <view class="item">
                        <i class="iconfont icon-fenxiang"></i>
                        <view>分享</view>
                    </view>
                </view>

                <!--点赞-->
                <view class="awesome-box nowrap">
                    <i class="iconfont icon-zan"></i>
                    <span class="awesome-item">油焖番石榴，</span>
                    <span class="awesome-item">油焖番石榴，</span>
                    <span class="awesome-item">油焖番石榴，</span>
                    <span class="awesome-item">油焖番石榴</span>
                </view>

                <!--评论-->
                <view class="comment-box">
                    <view class="comment-item">
                        <view class="name nowrap">
                            清蒸百香果：
                        </view>
                        <view class="text nowrap">
                            山中何事，松花酿酒，春水煎茶。山中何事，松花酿酒，春水煎茶。山中何事，松花酿酒，春水煎茶。
                        </view>
                    </view>
                    <view class="comment-item">
                        <view class="name nowrap">
                            清蒸百香果：
                        </view>
                        <view class="text nowrap">
                            欲将心事付瑶筝，知音少，弦断有谁听？
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
