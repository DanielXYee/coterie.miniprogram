            </view>
        </view>
        <view class="topping-item mx-1px-top" wx:if="{{sticknews.description}}">
            <view class="tag">
                置顶
            </view>
            <view class="text nowrap">
                {{sticknews.description}}
            </view>
            <i class="iconfont icon-jiantou"></i>
        </view>
    </view>
