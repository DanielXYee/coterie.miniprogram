<view id="setting">
    <block>
        <view class="header">
            <view class="avatar">
                <image src="{{detail.avatar}}"></image>
            </view>
        </view>
        <view class="content">
            <view class="container">
                <view class="share">
                    <span class="iconfont icon-fenxiang"></span>
                    分享数据圈
                </view>
                <view class="nick-name">{{detail.name}}</view>
                <view class="describle">
                    {{detail.description}}
                </view>
                <view class="check-information">
                    查看详细信息
                </view>
            </view>
            <view class="business-card set-item">
                <view class="title">我的名片</view>
                <view class="name">{{detail.user.nick_name}}</view>
                <view class="iconfont icon-jiantou"></view>
            </view>
            <view class="data-set set-item" wx:if="{{detail.coterie_user_type == 'owner'}}" bindtap="jumpchangeSet">
                <view class="title">数据圈设置</view>
                <view class="iconfont icon-jiantou"></view>
            </view>
            <view class="drop-out set-item" wx:if="{{detail.coterie_user_type != 'owner'}}">退出圈子</view>
            <view class="member-manage set-item" wx:if="{{detail.coterie_user_type == 'owner'}}" bindtap="jumpManage">
                <view class="title">成员管理</view>
                <view class="iconfont icon-jiantou"></view>
            </view>
            <view class="disbanding set-item" wx:if="{{detail.coterie_user_type == 'owner'}}" bindtap="disMiss">解散圈子</view>
        </view>
    </block>
</view>