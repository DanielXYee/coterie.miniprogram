<view id="post-news">
    <block>
        <view class="edit-content">
            <view class="edit-describle">
                <textarea name="" id="" placeholder="分享自己的观点" placeholder-class="textarea-placeholder" bindinput="changeinput"></textarea>
            </view>
            <view class="edit-link">
               <!-- <span class="iconfont icon-lianjie"></span>
                www.ibran.cc-->
                <view class="link-left">
                    <view class="title">央视网_世界就在眼前</view>
                    <view class="txt">www.cctv.com</view>
                </view>
                <view class="link-right">
                    <span class="iconfont icon-lianjie"></span>
                </view>
            </view>
            <view class="imgs-box">
                <view class="item" wx:for="{{img_list}}" wx:key="{{index}}">
                    <view class="img-info" style="background:url({{item}});background-position: center;background-repeat: no-repeat;background-size: cover">
                    </view>
                    <view class="delete iconfont icon-close-circle"></view>
                </view>
            </view>
            <view class="edit-topic">
                <!--<view class="item">
                    棒呀！
                    <span class="iconfont icon-dashang"></span>
                </view>-->
                <view class="add-item" bindtap="jumpTopic">#添加话题</view>
            </view>
        </view>
        <view class="add-content">
            <view class="iconfont icon-shangchuantupian" bindtap="changeImage" wx:if="{{img_list.length < 9}}"></view>
            <view class="iconfont icon-lianjie" bindtap="changeLink"></view>
            <view class="iconfont icon-icon-test" bindtap="jumpAite"></view>
        </view>
        <view class="publish-btn">发表</view>
    </block>
    <block>
        <view class="add-link {{is_show ? 'cur' : ''}}">
            <view class="panel-body">
                <view class="title">
                    插入链接
                </view>
                <view class="ipt-box">
                    <input type="text" placeholder="请插入链接" placeholder-class="input-placeholder"/>
                </view>
                <view class="btn-box mx-1px-top">
                    <view class="item cancel">取消</view>
                    <view class="item sure">确定</view>
                </view>
            </view>
        </view>
    </block>
</view>