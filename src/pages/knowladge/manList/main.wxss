#manList .head {
  z-index: 50;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px;
}
#manList .head .search {
  flex: 1;
  position: relative;
  height: 40px;
  line-height: 40px;
  border-radius: 4px;
  background-color: #F3F3F3;
}
#manList .head .search input {
  padding-left: 34px;
  height: 40px;
  line-height: 40px;
  font-size: 12px;
}
#manList .head .search .input-placeholder {
  color: #909090;
  font-size: 12px;
}
#manList .head .search span {
  position: absolute;
  top: 0;
  left: 10px;
  color: #909090;
  font-size: 14px;
}
#manList .head .cancel {
  height: 40px;
  line-height: 40px;
  color: #202020;
  font-size: 13px;
  padding: 0 2px 0 17px;
}
#manList .content {
  background-color: #ffffff;
  margin-top: 70px;
}
#manList .content .radio-group .radio {
  display: flex;
  align-items: center;
  height: 50px;
  padding: 0 0 0 28px;
}
#manList .content .radio-group .radio .info {
  display: flex;
  align-items: center;
  padding-left: 25px;
  color: #4A4A4A;
  font-size: 14px;
  line-height: 20px;
}
#manList .content .radio-group .radio .info .avatar {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
#manList .content .radio-group .radio .info .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
#manList .content radio .wx-radio-input {
  border-radius: 100%;
  background-color: #fff;
  border: 1px solid #c1caca;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05), inset 0 -15px 10px -12px rgba(0, 0, 0, 0.05);
  height: 18px;
  width: 18px;
}
#manList .content radio .wx-radio-input.wx-radio-input-checked::before {
  border-radius: 100%;
  background-color: #004E9D;
  border: 3px solid #004E9D;
}
